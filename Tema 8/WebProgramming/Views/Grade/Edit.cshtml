@model WebProgramming.ViewModels.GradeViewModel

@{
    ViewData["Title"] = "Edit Grade";
}

<div id="editDiv">
    <h1>Edit Student Grade</h1>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Gid" />
        <input type="hidden" asp-for="Sid" />

        <div>
            <label asp-for="Course"></label>
            <input asp-for="Course" class="form-control" />
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>
        <br />

        <div>
            <label asp-for="GradeValue"></label>
            <input asp-for="GradeValue" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GradeValue" class="text-danger"></span>
        </div>
        <br />

        <div>
            <a asp-action="Index" asp-controller="Student" asp-route-id="@Model.Sid" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
